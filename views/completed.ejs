<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>DoneTask</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  <link rel="stylesheet" href="style/style.css">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>

<body>
  <!-- beginning of the navbar-->
  <nav id="navbar" class="navbar navbar-expand-lg" data-bs-theme="dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="#">DoneTask</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" aria-current="page" href="/ongoing">Your Tasks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/completed">Completed Tasks</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- end of the navbar-->


  <!-- list of tasks -->
  <main class=" container">
    <section class="task-list">
      <ul class="row justify-content-around">
        <% if (tasksList.length < 1) { %>
          <div class="container text-center p-5" style="background-color: white;">
            <span class="fw-bold fs-5 ">No tasks available.</span>
          </div>
          <% } %>
            <% for (let i=0; i < tasksList.length; i++) {%>
              <li class="task-item d-flex col col-12 justify-content-between align-items-center ">
                <span class="task-title">
                  <%= tasksList[i].title %>
                </span>
                <div class="task-action d-flex">
                  <div class="">
                    <button class="task-detail-btn btn btn-info" name="task_detail"
                      value="<%=tasksList[i].task_id %>"" data-title=" <%=tasksList[i].title %>" data-description = "<%=
                        tasksList[i].description %>" data-status = "<%= tasksList[i].status %>" data-due_date = "<%=
                            tasksList[i].due_date %>"
                            data-bs-toggle="modal" data-bs-target="#task-detail-modal">
                            <i class="bi bi-info-circle" style="color: white;"></i>
                    </button>
                  </div>

                </div>

              </li>
              <% } %>
      </ul>
    </section>
  </main>
  <!-- end of list -->

  <!-- modal for task detail -->
  <div class="modal fade" id="task-detail-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content"></div>
    </div>
  </div>
  <!-- end of modal for task detail -->


  <!-- Modal for delete button -->
  <div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true"
    data-bs-backdrop="static" data-bs-keyboard="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body text-center">
          <span class="fw-bold fs-5">Are you sure you want to delete this task?</span>
        </div>
        <div class="modal-footer d-flex justify-content-center">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">No</button>
          <form action="/delete" method="post">
            <button type="submit" name="delete_task" class="delete-confirm-btn btn btn-danger">Yes</button>
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- end of modal -->
  <script src="script/completed.js" type="module"></script>
  <script src=" https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>
</body>

</html>